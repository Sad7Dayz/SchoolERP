@model IEnumerable<SchoolERP.Models.Admin.ClassTimeTable>

@{
    ViewBag.Title = "ViewTimeTable";
    Layout = "~/Views/Shared/Admin.cshtml";
}


<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Class Level</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Class Level</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title m-b-0"><i class="fas fa-level-up-alt"></i>Class Level</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            
                        </div>

                    </div>
                </div>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ClassLevelID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClassLevelName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Days)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Period1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Period2)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Period3)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Period4)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Period5)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Period6)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassLevelID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassLevelName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Days)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Period1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Period2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Period3)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Period4)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Period5)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Period6)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                            </td>
                        </tr>
                    }

                </table>


            </div>
        </div>
    </div>
</div>


